# include "TCanvas.h"
# include "TROOT.h"
# include "TGraphErrors.h"
# include "TF1.h"
# include "TLegend.h"
# include "TArrow.h"
# include "TLatex.h"
void multigraph_3(){
   TCanvas *c1 = new TCanvas("c1","multigraph",700,600);
 // c1->SetGrid();
c1->Divide(1,2);
c1->cd(1);
   TMultiGraph *mg = new TMultiGraph();

// create first graph
//   TGraphErrors *gr1 = new TGraphErrors("d_35MeV.txt");
//   gr1->SetMarkerColor(kBlue);
//   gr1->SetMarkerStyle(24);
//   mg->Add(gr1,"AP"); 

// create 2 graph
   TGraphErrors *gr2 = new TGraphErrors("t+8be_n_transfer.txt");
   gr2->SetMarkerColor(kRed);
   gr2->SetMarkerStyle(25);
   mg->Add(gr2,"AP");

// create 3 graph
   TGraphErrors *gr3 = new TGraphErrors("3He_8Li_gs.txt");
   gr3->SetMarkerColor(kBlack);
   gr3->SetMarkerStyle(22);
   mg->Add(gr3,"AP");

// create 4 graph
   TGraphErrors *gr4 = new TGraphErrors("4He_7Li_gs.txt");
   gr4->SetMarkerColor(kBlack);
   gr4->SetMarkerStyle(34);
   mg->Add(gr4,"AP");
//////////////////////////
// create 10 graph
   TGraphErrors *gr10 = new TGraphErrors("Boron_CN.txt");
   gr10->SetMarkerColor(kBlack);
   gr10->SetMarkerStyle(34);
   mg->Add(gr10,"AP");


/////////////////////////////
  mg->Draw("apl");
   mg->GetXaxis()->SetTitle("#Theta (deg)");
   mg->GetYaxis()->SetTitle("d#sigma/d#Omega (mb/sr)");
    mg->SetTitle("");
// legend
// gr1->SetName("g1");
 gr2->SetName("g2");
 gr3->SetName("g3");
 gr4->SetName("g4");
 gr10->SetName("g10");

TLegend* l=new TLegend(0.6, 0.65,0.85,0.9);
// l->AddEntry("g1","d+Be->elastic","p");
l->AddEntry("g2","d+Be->t+^{8}Be","p");
l->AddEntry("g3","d+Be->^{3}He+^{8}Li","p");
l->AddEntry("g4","d+Be->^{4}He+^{7}Li","p");
l->AddEntry("g10","d+Be->^{A}B","p");
 l->SetHeader("E_{d}=35 MeV");
       l->Draw();
 gPad->Update();
   gPad->Modified();
///////////////////////////////////////
c1->cd(2);

 TMultiGraph *mg2 = new TMultiGraph();
// create 5 graph
   TGraphErrors *gr5 = new TGraphErrors("6Li_d_35MeV.txt");
   gr5->SetMarkerColor(kBlack);
   gr5->SetMarkerStyle(20);
   mg2->Add(gr5,"AP");

// create 6 graph
   TGraphErrors *gr6 = new TGraphErrors("7Li_d_35MeV.txt");
   gr6->SetMarkerColor(kBlack);
   gr6->SetMarkerStyle(32);
   mg2->Add(gr6,"AP");


// create 7 graph
   TGraphErrors *gr7 = new TGraphErrors("8Li_d_35MeV.txt");
   gr7->SetMarkerColor(kBlack);
   gr7->SetMarkerStyle(27);
   mg2->Add(gr7,"AP");

// create 8 graph
   TGraphErrors *gr8 = new TGraphErrors("4He_35MeV_inv.txt");
   gr8->SetMarkerColor(kBlack);
   gr8->SetMarkerStyle(34);
   mg2->Add(gr8,"AP");

// create 9 graph
  // TGraphErrors *gr9 = new TGraphErrors("Boron_CN.txt");
 //  gr9->SetMarkerColor(kBlack);
 //  gr9->SetMarkerStyle(31);
 //  mg2->Add(gr9,"AP");


  mg2->Draw("APL");
   mg2->GetXaxis()->SetTitle("#Theta (deg)");
   mg2->GetYaxis()->SetTitle("d#sigma/d#Omega (mb/sr)");
    mg2->SetTitle("");
// legend
c1->cd(2);
 gr5->SetName("g5");
 gr6->SetName("g6");
 gr7->SetName("g7");
 gr8->SetName("g8");
 //gr9->SetName("g9");

TLegend *l2=new TLegend(0.6, 0.65,0.85,0.9);
l2->AddEntry("g5","d+Be->^{6}Li+^{5}He","p");
l2->AddEntry("g6","d+Be->^{7}Li+^{4}He","p");
l2->AddEntry("g7","d+Be->^{8}Li+^{3}He","p");
l2->AddEntry("g8","d+Be->x+^{4}He(inverted)","p");
// l2->AddEntry("g9","d+Be->^{A}B","p");
       l2->SetHeader("E_{d}=35 MeV");
       l2->Draw();
///
  
}
